<UnitGfx>:
        source: None
        animation: {}
        angle: 0      
        Image:
                source: root.source
                pos: root.pos
                size: 64, 64

                canvas.before:
                        PushMatrix:
                        Color:
                                rgba: 1,1,1,1

                        Rotate:
                                axis: 0,0,1
                                angle: root.angle
                                origin: self.center

                        Color:
                                rgba: 1,0,0,.1
                        Line:
                                rectangle: self.x, self.y, self.size[0], self.size[1]
                        Ellipse:
                                pos: self.x, self.y
                                size: self.size

                canvas.after:
                        PopMatrix:

