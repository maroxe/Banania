<UnitGfx>:
        default_animation: None
        animations: {'default': self.default_animation}
        source: self.default_animation

        angle: 0      
        size: dp(32), dp(32)
        mass: 1
        shape: 'circle'
        collision_type: 0
        Image:
                source: root.source
                pos: root.pos
                size: root.size

                canvas.before:
                        PushMatrix:
                        Color:
                                rgba: 1,1,1,1

                        Rotate:
                                axis: 0,0,1
                                angle: root.angle
                                origin: self.center

                        Color:
                                rgba: 1,0,0,.1
                        #Line:
                        #        rectangle: self.x, self.y, self.size[0], self.size[1]
                        Ellipse:
                                pos: self.x, self.y
                                size: self.size

                canvas.after:
                        PopMatrix:

<HeroGfx>:
        collision_type: 1
        mass: 10
        animations: 
                {'default': 'img/sprites/p1walkdown.zip',\
                'special': 'img/sprites/p1special.zip',\
                'walkup': 'img/sprites/p1walkup.zip',\
                'walkdown': 'img/sprites/p1walkdown.zip',\
                'walkleft': 'img/sprites/p1walkleft.zip',\
                'walkright': 'img/sprites/p1walkright.zip'}


<EnemyGfx>:
        collision_type: 2
        animations: 
                {'default': 'img/sprites/p2walkdown.zip',\
                'type1': 'img/sprites/mons/Mons 1.png',\
                'type2': 'img/sprites/mons/Mons 2.png',\
                'type3': 'img/sprites/mons/Mons 3.png'}

<GoalGfx>:
        collision_type: 3
        size: dp(100), dp(100)
        mass: 10
        animations:
                {'default': 'img/sprites/goalnormal.zip',\
                'happy': 'img/sprites/goalhappy.zip',\
                'unhappy': 'img/sprites/goalunhappy.zip'}

<BrickGfx>:
        collision_type: 4
        animations: {'default': 'img/sprites/ball.png'}
