<UnitGfx>:
        default_animation: None
        source: self.default_animation

        angle: 0      
        size: 32, 32
        mass: 1
        shape: 'circle'
        collision_type: 0
        Image:
                source: root.source
                pos: root.pos
                size: root.size

                canvas.before:
                        PushMatrix:
                        Color:
                                rgba: 1,1,1,1

                        Rotate:
                                axis: 0,0,1
                                angle: root.angle
                                origin: self.center

                        Color:
                                rgba: 1,0,0,.1
                        Line:
                                rectangle: self.x, self.y, self.size[0], self.size[1]
                        Ellipse:
                                pos: self.x, self.y
                                size: self.size

                canvas.after:
                        PopMatrix:

<HeroGfx>:
        collision_type: 1
        mass: 10
        default_animation: 'img/sprites/p1walkdown.zip'
        special: 'img/sprites/p1special.zip'
        walkup: 'img/sprites/p1walkup.zip'
        walkdown: 'img/sprites/p1walkdown.zip'
        walkleft: 'img/sprites/p1walkleft.zip'
        walkright: 'img/sprites/p1walkright.zip'

<EnemyGfx>:
        collision_type: 2
        default_animation: 'img/sprites/p2walkdown.zip'
        walkup: 'img/sprites/p2walkup.zip'
        walkdown: 'img/sprites/p2walkdown.zip'
        walkleft: 'img/sprites/p2walkleft.zip'
        walkright: 'img/sprites/p2walkright.zip'
     

<GoalGfx>:
        collision_type: 3
        size: 100, 100
        mass: 10
        default_animation: 'img/sprites/goalnormal.zip'
        happy: 'img/sprites/goalhappy.zip'
        unhappy: 'img/sprites/goalunhappy.zip'

<BrickGfx>:
        collision_type: 4
        default_animation: 'img/sprites/ball.png'
