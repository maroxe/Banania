<GameInterface>
        score: 0
        time: 0
        fps: 0
        explosions_left: 0
        size: root.size
        GameInterfaceBackground:
                size: root.size

<GameInterface@GameInterfaceBackground>
        score: root.score
        time: root.time
        fps: root.fps
        explosions_left: root.explosions_left
        canvas.before:
                Rectangle:
                        size: self.size
                        source: 'img/background/soccer_field.png'
        Label:
                pos: root.scale(80, 90)
                text: '[color=000000]fps: %d | Explosions: %d | Score: %d |  Time: %d [/color]' % (root.fps, root.explosions_left, root.score, root.time)
                markup: True
                font_size: '10dp'
