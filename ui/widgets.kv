<Window>

<MenuWidget>
        active: False
        hide_pos: self.scale(400, 800)


<StartMenuWidget>
        start_button: start_button
        size: self.scale(20, 40)
        pos: (self.scale(50-20/2, 50-40/2) if self.active else self.hide_pos)
        BoxLayout:
                orientation: 'vertical'
                size: root.size
                pos: root.pos
                Button:
                        id: start_button
                        text: 'Start'
                        font_size: '20dp'
                Button:
                        id: quit_button
                        text: 'Quit'
                        font_size: '20dp'
                        on_press: app.stop()


<TemporaryMessageWidget>
        count: 0
        msg: ''
        Label:
                pos: root.scale(40, 50) if root.active else root.hide_pos
                text: '[color=000000]%s\n Start in %d ![/color]' % (root.msg, root.count+1)
                markup: True
                font_size: '20dp'


<EndLevelWidget>
        continue_button: continue_button
        count: 0
        size: self.scale(40, 50)
        player_won: True
        BoxLayout:
                orientation: 'vertical'
                size: root.size
                pos: root.scale(25, 30) if root.active else (400, 800)
                Button:
                        id: continue_button
                        text: 'Next level!'
                        font_size: '20dp'


