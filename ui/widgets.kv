<Button>
        background_normal: 'img/sprites/button.png'


<Window>

<StartMenuWidget>
        start_button: start_button
        size: 200, 200
        pos: 400, 200
        BoxLayout:
                orientation: 'vertical'
                size: root.size
                pos: root.pos
                Button:
                        id: start_button
                        text: 'Start'
                Button:
                        id: quit_button
                        text: 'Quit'
                        on_press: app.stop()


<BeginLevelWidget>
        count: 0
        Label:
                pos: 200, 200
                text: '[color=000000]Start in %d ![/color]' % (root.count+1)
                markup: True
                font_size: '100sp'


<EndLevelWidget>
        continue_button: continue_button
        count: 0
        player_won: True
        BoxLayout:
                orientation: 'vertical'
                size: root.size
                pos: 400, 400

                Label:
                        text: '[color=000000]Player %d won![/color]' % ( 1 if root.player_won else 2)
                        markup: True
                        font_size: '50sp'
                Button:
                        id: continue_button
                        text: 'Next level!'


