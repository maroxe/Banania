<Window>

<MenuWidget>
        active: False
        hide_pos: (400, 800)


<StartMenuWidget>
        start_button: start_button
        size: 200, 200
        pos: 250, 200
        BoxLayout:
                orientation: 'vertical'
                size: root.size
                pos: root.pos
                Button:
                        id: start_button
                        text: 'Start'
                        font_size: '50sp'
                Button:
                        id: quit_button
                        text: 'Quit'
                        font_size: '50sp'
                        on_press: app.stop()


<TemporaryMessageWidget>
        count: 0
        msg: ''
        Label:
                pos: (250, 300) if root.active else root.hide_pos
                text: '[color=000000]%s\n Start in %d ![/color]' % (root.msg, root.count+1)
                markup: True
                font_size: '50sp'


<EndLevelWidget>
        continue_button: continue_button
        count: 0
        size: 200, 100
        player_won: True
        BoxLayout:
                orientation: 'vertical'
                size: root.size
                pos: (250, 300) if root.active else (400, 800)
                Button:
                        id: continue_button
                        text: 'Next level!'
                        font_size: '50sp'


